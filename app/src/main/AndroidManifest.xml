            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".atividades.ColetarDados"
            android:label="@string/title_activity_coletar_dados"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".atividades.ListarFormularios"
            android:label="@string/title_activity_listar_formularios"
            android:parentActivityName=".atividades.Inicio"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.adolfoquaranta.ef2.atividades.Inicio" />
        </activity>
    </application>

</manifest>