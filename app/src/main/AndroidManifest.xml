<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.adolfoquaranta.coletadigital">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_assignment_turned_in_black_48dp"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="me.adolfoquaranta.coletadigital.atividades.Inicio"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="me.adolfoquaranta.coletadigital.atividades.Inicio" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.adolfoquaranta.coletadigital.atividades.CadastroFormulario"
            android:label="@string/title_activity_cadastro_formulario"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="me.adolfoquaranta.coletadigital.atividades.CadastroModeloFormulario"
            android:label="@string/title_activity_cadastro_formulario_Modelo"
            android:parentActivityName="me.adolfoquaranta.coletadigital.atividades.CadastroFormulario"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.adolfoquaranta.coletadigital.atividades.CadastroFormulario" />
        </activity>
        <activity
            android:name="me.adolfoquaranta.coletadigital.atividades.CadastroTratamentos"
            android:label="@string/title_activity_cadastro_tratamentos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="me.adolfoquaranta.coletadigital.atividades.CadastroVariaveis"
            android:label="@string/title_activity_cadastro_variaveis"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="me.adolfoquaranta.coletadigital.atividades.CadastroColeta"
            android:label="@string/title_activity_cadastro_coleta"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="me.adolfoquaranta.coletadigital.atividades.ColetarDados"
            android:label="@string/title_activity_coletar_dados"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="me.adolfoquaranta.coletadigital.atividades.ListarFormularios"
            android:label="@string/title_activity_listar_formularios"
            android:parentActivityName="me.adolfoquaranta.coletadigital.atividades.Inicio"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.adolfoquaranta.coletadigital.atividades.Inicio" />
        </activity>
        <activity
            android:name="me.adolfoquaranta.coletadigital.atividades.ListarColetas"
            android:label="@string/title_activity_listar_coletas"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>